@page "/valuesList/{customerId:int}"
@inject ICustomerService _customerService
@inject IValueService _valueService;
@inject NavigationManager Navigation

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class=" d-flex justify-content-start">
                <h3>Values List For: @SelectedCustomer?.Name</h3>
            </div>
        </div>
        <div class="col-sm-3">
            <div class=" d-flex justify-content-end">
                <button class="btn btn-outline-primary" @onclick="NavigateToCustomersList">
                    Customers List
                </button>
            </div>
        </div>
        <div class="col-sm-3">
            <div class=" d-flex justify-content-end">
                <button class="btn btn-outline-primary" @onclick="() => NavigateToValuesDetails(CustomerId)">
                    New Value
                </button>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Reg1Value
                </th>
                <th>
                    RegDate
                </th>
                <th>
                    VlueTypeDescription
                </th>
                <th>
                    ValueTypeUnit
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var value in SelectedCustomer?.Values)
            {
                <tr>
                    <td>
                        @value.Reg1Value
                    </td>
                    <td>
                        @value.RegDate
                    </td>
                    <td>
                        @value.ValueTypeDescription
                    </td>
                    <td>
                        @value.ValueTypeUnit
                    </td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {

    private void NavigateToCustomersList() => Navigation.NavigateTo("/");
    private void NavigateToValuesDetails(int? Id) => Navigation.NavigateTo($"valueDetails/{Id}");

    [Parameter]
    public int CustomerId { get; set; }
    public Customer? SelectedCustomer { get; set; }
    public List<Value>? CustomerValues { get; set; }
    public List<Value> ValuesListData;
    private DisplayValueModel ValueModel = new DisplayValueModel();

    protected override async Task OnInitializedAsync()
    {
        SelectedCustomer = await _customerService.GetCustomerByIdAsync(CustomerId);
        if (SelectedCustomer.Values is null)
        {
            SelectedCustomer.Values = new List<Value>();
        }
    }
}
