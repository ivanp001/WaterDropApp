@page "/updateCustomer/{customerId:int}"

@using Microsoft.Extensions.Hosting
@inject ICustomerService _customerService
@inject NavigationManager Navigation

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="d-flex justify-content-start">
                <h3>Update Customer</h3>
            </div>
        </div>
        <div class="col-sm-6">
            <div class=" d-flex justify-content-end">
                <button class="btn btn-outline-primary" @onclick="() => NavigateToCustomerDetails(CustomerId)">
                    Customers Details
                </button>
            </div>
        </div>
    </div>
</div>

<EditForm class="form-inline row g-3  my-2" Model="@CustomerModel" OnValidSubmit="Update">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">
        <div class="col-sm-4">
            <div class="mb-3">
                <InputText class="form-control mx-2" @bind-Value="CustomerModel.Name" Placeholder="Name" />
            </div>
            <div class="mb-3">
                <InputNumber class="form-control mx-2" @bind-Value="CustomerModel.MpCode" Placeholder="MpCode" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="mb-3">
                <InputText class="form-control mx-2" @bind-Value="CustomerModel.Street" Placeholder="Street" />
            </div>
            <div class="mb-3">
                <InputNumber class="form-control mx-2" @bind-Value="CustomerModel.SerialNo" Placeholder="SerialNo" />
            </div>
            <div class="d-flex justify-content-end">
                <button class="btn btn-primary" type="submit">
                    Update
                </button>
            </div>
        </div>
    </div>
</EditForm>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Customer Data</h3>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    MpCode
                </th>
                <th>
                    Street
                </th>
                <th>
                    Serial Number
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @SelectedCustomer.Name
                </td>
                <td>
                    @SelectedCustomer.MpCode
                </td>
                <td>
                    @SelectedCustomer.Street
                </td>
                <td>
                    @SelectedCustomer.SerialNo
                </td>
            </tr>
        </tbody>
    </table>
</div>

@code {
    private void NavigateToCustomerDetails(int? Id) => Navigation.NavigateTo($"customerDetails/{Id}");

    [Parameter]
    public int CustomerId { get; set; }
    public Customer? SelectedCustomer { get; set; }
    public List<Value> ValuesList;
    public DisplayCustomerModel CustomerModel = new DisplayCustomerModel();

    protected override async Task OnInitializedAsync()
    {
        SelectedCustomer = await _customerService.GetCustomerByIdAsync(CustomerId);
       
        //map current values to the model
        await LoadCustomer(CustomerId);
    }

    private async Task LoadCustomer(int CustomerId)
    {
        if (SelectedCustomer is not null)
        {
            CustomerModel.MpCode = SelectedCustomer.MpCode;
            CustomerModel.Name = SelectedCustomer.Name;
            CustomerModel.Street = SelectedCustomer.Street;
            CustomerModel.SerialNo = SelectedCustomer.SerialNo;
        }
    }

    public async Task Update()
    {
        Customer Customer = new Customer
        {
            ExternalCode = CustomerId,
            MpCode = CustomerModel.MpCode,
            Name = CustomerModel.Name,
            SerialNo = CustomerModel?.SerialNo,
            Street = CustomerModel?.Street,
            Values = ValuesList
        };
        await _customerService.UpdateCustomerAsync(Customer);
        //call OnInitializedAsync to refresh the list
        await OnInitializedAsync();
    }
}
