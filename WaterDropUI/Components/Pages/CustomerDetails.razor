@page "/customerDetails/{customerId:int?}"

@inject ICustomerService _customerService
@inject IValueService _valueService;
@inject NavigationManager Navigation
@inject Blazored.Toast.Services.IToastService Toast

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="d-flex justify-content-start">
                <h3>New Customer</h3>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="d-flex justify-content-end">

                <button class="btn btn-outline-primary" @onclick="() => NavigateToCustomersList()">
                    Customers List
                </button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <EditForm class="form-inline row g-3" Model="@CustomerModel" OnValidSubmit="AddCustomer">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <InputText class="form-control mx-2" @bind-Value="CustomerModel.Name" Placeholder="Name" />
                <InputNumber class="form-control mx-2" @bind-Value="CustomerModel.MpCode" Placeholder="MpCode" />
                <InputText class="form-control mx-2" @bind-Value="CustomerModel.Street" Placeholder="Street" />
                <InputNumber class="form-control mx-2" @bind-Value="CustomerModel.SerialNo" Placeholder="SerialNo" />
                <div class="d-flex justify-content-end">
                    <button class="btn btn-primary" type="submit">
                        Submit
                    </button>
                </div>
            </EditForm>
        </div>
    </div>


    <h5>Customers List</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    MpCode
                </th>
                <th>
                    Street
                </th>
                <th>
                    Serial No
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var customer in CustomersList)
            {
                <tr>
                    <td>
                        @* TODO:Ternary operator *@
                        @if (CustomerLoaded)
                        {
                            @SelectedCustomer?.Name
                        }
                        else
                        {
                            @customer.Name
                        }
                    </td>
                    <td>
                        @if (CustomerLoaded)
                        {
                            @SelectedCustomer?.MpCode
                        }
                        else
                        {
                            @customer.MpCode
                        }
                    </td>
                    <td>
                        @if (CustomerLoaded)
                        {
                            @SelectedCustomer?.Street
                        }
                        else
                        {
                            @customer.Street
                        }
                    </td>
                    <td>
                        @if (CustomerLoaded)
                        {
                            @SelectedCustomer?.SerialNo
                        }
                        else
                        {
                            @customer.SerialNo
                        }
                    </td>
                    <td>
                        <button class="btn btn-danger btn-sm col-auto"
                                @onclick="() => DeleteCustomer(customer.ExternalCode)">
                            Delete
                        </button>
                    </td>
                    <td>
                        <button class="btn btn-warning btn-sm col-auto"
                                @onclick="() => NavigateToUpdateCustomer(customer.ExternalCode)">
                            Update
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {

    private void NavigateToCustomersList() => Navigation.NavigateTo("/");
    private void NavigateToValuesList(int? Id) => Navigation.NavigateTo($"valuesList/{Id}");
    private void NavigateToValuesDetails(int? Id) => Navigation.NavigateTo($"valueDetails/{Id}");
    private void NavigateToUpdateCustomer(int Id) => Navigation.NavigateTo($"updateCustomer/{Id}");
    
    //remove
    public bool CustomerLoaded { get; set; }

    [Parameter]
    public int CustomerId { get; set; }
    public Customer? SelectedCustomer { get; set; }

    public List<Customer> CustomersList;
    public DisplayCustomerModel CustomerModel = new DisplayCustomerModel();

    public List<Value> ValuesList;
    private DisplayValueModel ValueModel = new DisplayValueModel();

    protected override async Task OnInitializedAsync()
    {
        CustomersList = await _customerService.GetAllCustomersAsync();

        //SelectedCustomer = await _customerService.GetCustomerByIdAsync(CustomerId);
    }

    private async Task AddCustomer()
    {
        Customer Customer = new Customer
        {
            MpCode = CustomerModel.MpCode,
            Name = CustomerModel.Name,
            SerialNo = CustomerModel?.SerialNo,
            Street = CustomerModel?.Street,
            Values = ValuesList
        };
        await _customerService.AddCustomerAsync(Customer);
        CustomersList.Add(Customer);
    }

    private async Task DeleteCustomer(int CustomerId)
    {
        await _customerService.DeleteCustomerAsync(CustomerId);
        await OnInitializedAsync();
        Toast.ShowSuccess("Customer Deleted!");
    }
}
